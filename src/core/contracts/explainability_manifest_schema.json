{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Explainability Manifest Schema",
  "type": "object",
  "required": [
    "run_id",
    "task_name",
    "model_name",
    "created_at",
    "artifacts"
  ],
  "properties": {
    "run_id": {
      "type": "string",
      "description": "Unique identifier for the training run"
    },
    "task_name": {
      "type": "string"
    },
    "model_name": {
      "type": "string"
    },
    "dataset_id": {
      "type": "string"
    },
    "preprocess_pipeline_id": {
      "type": "string"
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "artifacts": {
      "type": "object",
      "description": "Map of artifact types to file paths",
      "additionalProperties": {
        "type": "string"
      }
    },
    "config_snapshot": {
      "type": "object",
      "description": "Snapshot of relevant configuration"
    }
  }
}
