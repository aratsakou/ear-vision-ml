{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "dataset_id": { "type": "string" },
    "task_name": { "type": "string" },
    "dataset_version": { "type": "string" },
    "status": { "type": "string", "enum": ["active", "archived", "building"] },
    "ontology_version": { "type": "string" },
    "task_mapping_version": { "type": "string" },
    "labelbox_project_mapping_versions": { "type": "array" },
    "sampling": { "type": "object" },
    "preprocess_pipeline_id": { "type": "string" },
    "preprocess_pipeline_version": { "type": "string" },
    "parquet_paths": {
      "type": "object",
      "patternProperties": {
        "^(train|val|test)$": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "created_by": { "type": "string" },
    "created_at": { "type": "string", "format": "date-time" },
    "metadata": { "type": "object" },
    "notes": { "type": "string" }
  },
  "required": [
    "dataset_id",
    "task_name",
    "dataset_version",
    "status",
    "parquet_paths",
    "created_by",
    "created_at"
  ]
}